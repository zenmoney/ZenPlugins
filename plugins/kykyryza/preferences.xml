<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
    <EditTextPreference
            key="card_number"
            title="Штрих-код карты"
            summary="|Штрих-код карты|{@s}"
            dialogTitle="Штрих-код карты"
            negativeButtonText="Отмена"
            positiveButtonText="ОК"
            dialogMessage="Введите штрих-код карты"
            obligatory="true">
    </EditTextPreference>
    <EditTextPreference
            key="password"
            title="Пароль"
            summary="||***********"
            dialogTitle="Пароль"
            negativeButtonText="Отмена"
            positiveButtonText="ОК"
            dialogMessage="Введите пароль, используемый для входа в интернет-банк"
            inputType="textPassword"
            obligatory="true">
    </EditTextPreference>
    <ListPreference
            key="period"
            title="Начальный период загрузки данных"
            dialogTitle="Период загрузки"
            positiveButtonText="ОК"
            negativeButtonText="Отмена"
            entries="Квартал|Месяц|Неделя" entryValues="92|31|7"
            defaultValue="31"
            summary="|31|{@s}"
            dialogMessage="Укажите начальный период, за который нужно загрузить данные.">
    </ListPreference>
</PreferenceScreen>
