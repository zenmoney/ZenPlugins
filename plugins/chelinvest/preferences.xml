<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
  <EditTextPreference
    title="Логин"
    positiveButtonText="ОК"
    summary="||{@s}"
    dialogTitle="Логин"
    negativeButtonText="Отмена"
    obligatory="true"
    key="login">
  </EditTextPreference>
  <EditTextPreference
    positiveButtonText="ОК"
    key="password"
    dialogTitle="Пароль"
    negativeButtonText="Отмена"
    title="Пароль"
    summary="||***********"
    obligatory="true"
    inputType="textPassword">
  </EditTextPreference>
  <ListPreference
    positiveButtonText="ОК"
    key="confirmation_type"
    dialogTitle="Метод подтверждения входа"
    negativeButtonText="Отмена"
    title="Метод подтверждения входа"
    entries="СМС|ОТП-Токен|Нет" entryValues="sms|otp|none"
    defaultValue="sms"
    summary="|sms|{@s}">
  </ListPreference>
  <ListPreference
    positiveButtonText="ОК"
    key="period"
    dialogTitle="За какой период загружать операции"
    negativeButtonText="Отмена"
    title="За какой период загружать операции"
    entries="Квартал|Месяц|Неделя|Нет" entryValues="92|31|7|0"
    defaultValue="31"
    summary="|31|{@s}">
  </ListPreference>
</PreferenceScreen>
