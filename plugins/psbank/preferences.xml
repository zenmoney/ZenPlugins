<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
    <ListPreference
        title="Метод авторизации"
        dialogTitle="Метод авторизации"
        positiveButtonText="ОК"
        negativeButtonText="Отмена"
        summary="{@s}"
        key="loginType"
        entries="Номер клиента или псевдоним|Номер телефона"
        entryValues="0|1"
        defaultValue="0" />
    <EditTextPreference
        title="Номер клиента, псевдоним или телефон"
        dialogTitle="Номер клиента, псевдоним или телефон"
        positiveButtonText="ОК"
        negativeButtonText="Отмена"
        summary="||{@s}"
        obligatory="true"
        key="login" />
    <EditTextPreference
        title="Пароль"
        dialogTitle="Пароль"
        positiveButtonText="ОК"
        negativeButtonText="Отмена"
        summary="||******"
        obligatory="true"
        key="password"
        inputType="textPassword" />
    <ListPreference
        title="За какой период загружать операции"
        dialogTitle="За какой период загружать операции"
        positiveButtonText="ОК"
        negativeButtonText="Отмена"
        summary="{@s}"
        key="period"
        entries="Квартал|Месяц|Неделя"
        entryValues="92|31|7"
        defaultValue="31" />
</PreferenceScreen>