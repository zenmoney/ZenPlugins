<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
    <EditTextPreference
        title="Логин"
        dialogTitle="Логин"
        positiveButtonText="ОК"
        negativeButtonText="Отмена"
        summary="||{@s}"
        dialogMessage="Номер клиента, псевдоним или номер телефона."
        obligatory="true"
        key="login" />
    <EditTextPreference
        title="Пароль"
        dialogTitle="Пароль"
        positiveButtonText="ОК"
        negativeButtonText="Отмена"
        summary="||******"
        dialogMessage="Пароль для авторизации в интернет-банке."
        obligatory="true"
        key="password"
        inputType="textPassword" />
    <ListPreference
        title="Метод авторизации"
        dialogTitle="Метод авторизации"
        positiveButtonText="ОК"
        negativeButtonText="Отмена"
        summary="{@s}"
        dialogMessage="Укажите метод авторизации в интернет-банке."
        key="loginType"
        entries="Номер клиента или псевдоним|Номер телефона"
        entryValues="0|1"
        defaultValue="0" />
    <ListPreference
        title="Период загрузки данных"
        dialogTitle="Период загрузки данных"
        positiveButtonText="ОК"
        negativeButtonText="Отмена"
        summary="{@s}"
        dialogMessage="Укажите начальный период, за который нужно загрузить данные."
        key="period"
        entries="Квартал|Месяц|Неделя"
        entryValues="92|31|7"
        defaultValue="31" />
    <CheckBoxPreference
        title="Обрабатывать только открытые счета"
        defaultValue="true"
        key="onlyActive"
        summary="Получать данные только по открытым счетам, картам, вкладам и кредитам." />
</PreferenceScreen>