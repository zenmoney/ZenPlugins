<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
    <EditTextPreference
            key="username"
            obligatory="true"
            title="Имя пользователя"
            dialogTitle="Имя пользователя"
            dialogMessage="Введите имя пользователя для входа в интернет-банк BelSwissBank."
            positiveButtonText="ОК"
            negativeButtonText="Отмена"
            summary="|Имя пользователя|{@s}"
    >
    </EditTextPreference>
    <EditTextPreference
            key="password"
            inputType="textPassword"
            obligatory="true"
            title="Пароль"
            dialogTitle="Пароль"
            dialogMessage="Введите пароль от интернет-банка BelSwissBank."
            positiveButtonText="ОК"
            negativeButtonText="Отмена"
            summary="||***********"
    >
    </EditTextPreference>
    <EditTextPreference
            key="categoriesToLog"
            title="Что логировать"
            defaultValue="info,warn"
            dialogTitle="Что логировать"
            dialogMessage="Введите через запятую типы событий для логирования. Допустимые значения: info,warn,retry,request,requestData,response,responseData,*."
            positiveButtonText="ОК"
            negativeButtonText="Отмена"
            summary="|Категории для логирования|{@s}"
    >
    </EditTextPreference>
    <EditTextPreference
            key="apiUrl"
            title="API URL (настройка для разработчиков)"
            defaultValue="https://24.bsb.by/mobile/api"
            dialogTitle="API URL"
            dialogMessage="Введите API URL. Изменение данной опции может потребоваться для отладки работы приложения с плагином."
            positiveButtonText="ОК"
            negativeButtonText="Отмена"
            summary="|apiUrl|{@s}"
    >
    </EditTextPreference>
</PreferenceScreen>
