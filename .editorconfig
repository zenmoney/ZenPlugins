# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space
indent_size = 2

[*.{js,json}]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 4

[*.xml]
indent_style = space
indent_size = 4
