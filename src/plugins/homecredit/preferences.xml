<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
	<EditTextPreference
			key="phone"
			title="Номер телефона"
			dialogTitle="Номер телефона"
			dialogMessage="Формат: 79991111111"
			inputType="number"
			summary="||{@s}"
			positiveButtonText="ОК"
			negativeButtonText="Отмена"
			obligatory="false">
	</EditTextPreference>
	<EditTextPreference
			key="birth"
			title="Дата рождения"
			dialogTitle="Дата рождения"
			dialogMessage="Формат: дд.мм.гггг"
			inputType="text"
			summary="||{@s}"
			positiveButtonText="ОК"
			negativeButtonText="Отмена"
			obligatory="false">
	</EditTextPreference>
	<EditTextPreference
			key="pin"
			title="Пароль"
			dialogTitle="Пароль"
			inputType="textPassword"
			summary="||****"
			positiveButtonText="ОК"
			negativeButtonText="Отмена"
			obligatory="false">
	</EditTextPreference>
	<EditTextPreference
			key="startDate"
			title="С какой даты загружать операции"
			dialogTitle="С какой даты загружать операции"
			inputType="date"
			summary="|startDate|{@s}"
			defaultValue="2018-04-01T00:00:00.000Z"
			positiveButtonText="ОК"
			negativeButtonText="Отмена"
			obligatory="true">
	</EditTextPreference>
</PreferenceScreen>