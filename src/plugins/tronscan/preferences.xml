<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
    <EditTextPreference
        key="apiKey"
        obligatory="true"
        title="API Key"
        dialogTitle="TronScan API Key"
        dialogMessage="Ваш API ключ для доступа к TronScan API"
        positiveButtonText="ОК"
        negativeButtonText="Отмена"
        summary="***"
        inputType="textPassword"
    />
    <EditTextPreference
        key="wallets"
        obligatory="true"
        title="Wallets address"
        dialogTitle="Wallets address"
        dialogMessage="Адреса ваших кошельков (через запятую)"
        positiveButtonText="ОК"
        negativeButtonText="Отмена"
        summary="|wallets|{@s}"
    />
    <EditTextPreference
        key="startDate"
        obligatory="true"
        inputType="date"
        title="С какой даты загружать операции"
        defaultValue="2022-01-01T00:00:00.000Z"
        dialogTitle="Дата начала загрузки"
        dialogMessage="Введите дату, с которой загружать операции"
        positiveButtonText="ОК"
        negativeButtonText="Отмена"
        summary="|startDate|{@s}"
    />
</PreferenceScreen>
