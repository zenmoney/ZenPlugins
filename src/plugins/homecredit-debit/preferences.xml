<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
    <EditTextPreference
        key="login"
        summary="|Логин|{@s}"
        title="Логин"
        dialogTitle="Логин"
        dialogMessage="Введите логин, используемый для входа в интернет-банк"
        negativeButtonText="Отмена"
        positiveButtonText="ОК"
        inputType="text"
        obligatory="true"
    >
    </EditTextPreference>
    <EditTextPreference
        key="password"
        summary="||***********"
        title="Пароль"
        dialogTitle="Пароль"
        dialogMessage="Введите пароль, используемый для входа в интернет-банк"
        negativeButtonText="Отмена"
        positiveButtonText="ОК"
        inputType="textPassword"
        obligatory="true"
    >
    </EditTextPreference>
    <EditTextPreference
            key="code"
            summary="|0000|{@s}"
            title="4 цифры 3-го блока номера карты"
            dialogTitle="4 цифры 3-го блока номера карты"
            dialogMessage="Введите 4 цифры 3-го блока номера карты"
            negativeButtonText="Отмена"
            positiveButtonText="ОК"
            inputType="text"
            obligatory="true"
    >
    </EditTextPreference>
    <EditTextPreference
        key="startDate"
        obligatory="true"
        inputType="date"
        title="С какой даты загружать операции"
        defaultValue="2017-06-01T12:00:00.000Z"
        dialogTitle="Дата начала загрузки"
        dialogMessage="Введите дату, с которой загружать операции"
        positiveButtonText="ОК"
        negativeButtonText="Отмена"
        summary="|startDate|{@s}"
    >
    </EditTextPreference>
</PreferenceScreen>
