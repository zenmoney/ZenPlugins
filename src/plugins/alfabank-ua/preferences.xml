<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
    <EditTextPreference
        key="phone"
        obligatory="true"
        title="Номер телефону"
        dialogTitle="Номер телефону"
        positiveButtonText="ОК"
        negativeButtonText="Отмена"
        summary="||{@s}"
    />
    <EditTextPreference
        key="birthDate"
        title="Дата рождения"
        dialogTitle="Дата рождения"
        dialogMessage="Формат: гггг-мм-дд"
        inputType="text"
        summary="||{@s}"
        positiveButtonText="ОК"
        negativeButtonText="Отмена"
        obligatory="true">
    </EditTextPreference>
    <EditTextPreference
        key="startDate"
        obligatory="true"
        inputType="date"
        title="С какой даты загружать операции"
        defaultValue="2018-01-01T00:00:00.000Z"
        dialogTitle="Дата начала загрузки"
        dialogMessage="Введите дату, с которой загружать операции"
        positiveButtonText="ОК"
        negativeButtonText="Отмена"
        summary="|startDate|{@s}"
    />
</PreferenceScreen>
