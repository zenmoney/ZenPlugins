<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
    <EditTextPreference
        key="cardNumber"
        obligatory="true"
        title="Номер карты Альфа-банка"
        dialogTitle="Номер карты Альфа-банка"
        dialogMessage=""
        positiveButtonText="ОК"
        negativeButtonText="Отмена"
        summary="|Пример: 4444555566661111|{@s}"
    />
    <EditTextPreference
        key="cardExpirationDate"
        obligatory="true"
        title="Срок действия карты"
        dialogTitle="Срок действия карты"
        dialogMessage=""
        positiveButtonText="ОК"
        negativeButtonText="Отмена"
        summary="|Пример: 01/21|{@s}"
    />
    <EditTextPreference
        key="phoneNumber"
        obligatory="true"
        title="Номер телефона"
        dialogTitle="Номер телефона"
        dialogMessage=""
        positiveButtonText="ОК"
        negativeButtonText="Отмена"
        summary="|Пример: 79234567890|{@s}"
    />
    <EditTextPreference
        key="startDate"
        obligatory="true"
        inputType="date"
        title="С какой даты необходимо загружать операции"
        defaultValue="2017-12-01T00:00:00.000Z"
        dialogTitle="Дата начала загрузки"
        dialogMessage="Введите дату, с которой необходимо загружать операции"
        positiveButtonText="ОК"
        negativeButtonText="Отмена"
        summary="|startDate|{@s}"
    />
</PreferenceScreen>
