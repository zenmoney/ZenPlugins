<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
    <EditTextPreference
        key="login"
        obligatory="true"
        title="Логин"
        dialogTitle="Логин"
        dialogMessage="Введите логин от интернет-банка"
        positiveButtonText="ОК"
        negativeButtonText="Отмена"
        summary="|ID пользователя|{@s}"
    />
    <EditTextPreference
        key="password"
        obligatory="true"
        inputType="textPassword"
        title="Пароль от интернет-банка"
        dialogTitle="Пароль от интернет-банка"
        dialogMessage="Введите пароль от интернет-банка"
        positiveButtonText="ОК"
        negativeButtonText="Отмена"
        summary="||***********"
    />
    <EditTextPreference
        key="startDate"
        obligatory="true"
        inputType="date"
        title="С какой даты загружать операции"
        defaultValue="2022-01-01T00:00:00.000Z"
        dialogTitle="Дата начала загрузки"
        dialogMessage="Введите дату, с которой загружать операции"
        positiveButtonText="ОК"
        negativeButtonText="Отмена"
        summary="|startDate|{@s}"
    />
</PreferenceScreen>
