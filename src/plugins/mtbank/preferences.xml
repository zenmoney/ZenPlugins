<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
    <EditTextPreference
        key="phone"
        obligatory="true"
        title="Номер телефона"
        dialogTitle="Номер телефона"
        dialogMessage="+375*********"
        positiveButtonText="ОК"
        negativeButtonText="Отмена"
        summary="||{@s}"
    />
    <EditTextPreference
        key="password"
        obligatory="true"
        inputType="textPassword"
        title="Пароль"
        dialogTitle="Пароль"
        dialogMessage="Пароль для входа в интернет-банк МТБанк"
        positiveButtonText="ОК"
        negativeButtonText="Отмена"
        summary="||***********"
    />
    <EditTextPreference
        key="startDate"
        obligatory="true"
        inputType="date"
        title="С какой даты загружать операции"
        defaultValue="2018-01-01T00:00:00.000Z"
        dialogTitle="Дата начала загрузки"
        dialogMessage="Введите дату, с которой загружать операции"
        positiveButtonText="ОК"
        negativeButtonText="Отмена"
        summary="|startDate|{@s}"
    />
</PreferenceScreen>
