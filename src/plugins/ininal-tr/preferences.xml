<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
    <EditTextPreference
        key="login"
        obligatory="true"
        title="Login"
        dialogTitle="Login"
        dialogMessage="for TR number skip +90, for international numbers start with international code and plus sign"
        positiveButtonText="OK"
        negativeButtonText="Cancel"
        summary="|Phone number|{@s}"
    />
    <EditTextPreference
        key="password"
        obligatory="true"
        inputType="textPassword"
        title="Password"
        dialogTitle="Password"
        dialogMessage="Six digit Password"
        positiveButtonText="OK"
        negativeButtonText="Cancel"
        summary="||******"
    />
    <EditTextPreference
        key="startDate"
        obligatory="true"
        inputType="date"
        title="From what date to load transactions"
        defaultValue="2018-01-01T00:00:00.000Z"
        dialogTitle="From what date to load transactions"
        positiveButtonText="OK"
        negativeButtonText="Cancel"
        summary="|startDate|{@s}"
    />
</PreferenceScreen>
