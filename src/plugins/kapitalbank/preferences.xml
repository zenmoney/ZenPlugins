<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
    <EditTextPreference
        key="phone"
        obligatory="true"
        inputType="phone"
        title="Номер телефона"
        dialogTitle="Номер телефона"
        dialogMessage="Формат: 998967777777"
        positiveButtonText="ОК"
        negativeButtonText="Отмена"
        summary="||{@s}"
    />
    <EditTextPreference
        key="password"
        obligatory="true"
        inputType="textPassword"
        title="Пароль"
        dialogTitle="Пароль"
        dialogMessage="Введите пароль, используемый для входа в банк"
        positiveButtonText="ОК"
        negativeButtonText="Отмена"
        summary="||***********"
    />
    <EditTextPreference
        key="startDate"
        obligatory="true"
        inputType="date"
        title="С какой даты загружать операции"
        defaultValue="2020-01-01T00:00:00.000Z"
        dialogTitle="Дата начала загрузки"
        dialogMessage="Введите дату, с которой загружать операции"
        positiveButtonText="ОК"
        negativeButtonText="Отмена"
        summary="|startDate|{@s}"
    />
</PreferenceScreen>
